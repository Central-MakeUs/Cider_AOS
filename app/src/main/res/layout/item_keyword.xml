<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="keyword"
            type="com.cider.cider.domain.type.KeyWord" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_line_btn"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="6dp"
        android:paddingHorizontal="8dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/item_tag"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_tag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_text" />

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{keyword.title}"
            android:textSize="@dimen/text_lg"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/selector_line_btn_text_color"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_tag" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>