<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_detail_current"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_detail_intro"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_challenge_intro_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하루 한번 아침에 일어나서 물이 담긴 컵사진 인증하루 만보 걷기 챌린지는 쉽고 재미있게 만보를 걸을 수있는 챌린지로, 제가 맨날 일하다가 한번 입원하고 나서 심각성을 느끼고 만들게 된 멋진 챌린지\n\n안녕하세요"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="@dimen/text_base"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_intro"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_detail_info"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/challenge_detail_rule"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_fail"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/section_success"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_rule">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_fail_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/iv_fail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_fail_icon"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/ic_delete_box"
                            android:tint="@color/error"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_fail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@string/challenge_detail_fail"
                            android:textColor="@color/error"
                            android:textSize="@dimen/text_sm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_fail_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/iv_fail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/shape_mission_fail"
                        android:padding="8dp"
                        android:src="@drawable/ic_delete_box"
                        app:layout_constraintBottom_toTopOf="@id/tv_fail_module"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/section_fail_tv" />

                    <TextView
                        android:id="@+id/tv_fail_module"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="11회 미만 인증"
                        android:textColor="#2A2B36"
                        android:textSize="@dimen/text_lg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_success"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/section_fail"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_rule">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_success_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/iv_success"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_success_icon"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/ic_delete_box"
                            android:tint="@color/main"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@string/challenge_detail_success"
                            android:textColor="@color/main"
                            android:textSize="@dimen/text_sm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_success_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/iv_success"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/shape_mission_fail"
                        android:padding="8dp"
                        android:src="@drawable/ic_delete_box"
                        app:layout_constraintBottom_toTopOf="@id/tv_success_module"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/section_success_tv" />

                    <TextView
                        android:id="@+id/tv_success_module"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="실시간 사진촬영"
                        android:textColor="#2A2B36"
                        android:textSize="@dimen/text_lg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_mission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/challenge_detail_mission"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_challenge_mission_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="하루 한번 아침에 일어나서 물이 담긴 컵사진 인증
하루 한번 아침에 일어나서 물이 담긴 컵사진 인증"
                    android:textSize="@dimen/text_base"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/shape_rec_round_8"
                    android:backgroundTint="#F6F6F6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_mission" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_mission_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_mission_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_fail_mission_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_fail_mission_icon"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/ic_delete_box"
                            android:tint="@color/error"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_fail_mission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@string/challenge_detail_fail"
                            android:textColor="@color/error"
                            android:textSize="@dimen/text_sm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_fail_mission_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/challenge_detail_host"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_host">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_host_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_profile"
                            android:layout_width="@dimen/profile_size"
                            android:layout_height="@dimen/profile_size"
                            android:src="@drawable/shape_profile"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_caution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_caution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/challenge_detail_caution"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_caution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>