<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_detail_current"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/iv_current_guide"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/filled_info_16"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/tv_challenge_current"
                    app:layout_constraintTop_toTopOf="@id/tv_challenge_current"
                    app:layout_constraintBottom_toBottomOf="@id/tv_challenge_current"/>

                <TextView
                    android:id="@+id/tv_current_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30회 중 6회 진행"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="@dimen/text_base"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_challenge_current"
                    app:layout_constraintBottom_toBottomOf="@id/tv_challenge_current"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_average_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_current">

                    <TextView
                        android:id="@+id/tv_average_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="4dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textSize="@dimen/text_sm"
                        android:textColor="@color/main"
                        android:background="@drawable/shape_rec_round_4"
                        android:backgroundTint="@color/light_blue"
                        android:layout_marginStart="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/challenge_detail_average_current"/>

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/progress_average_current"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/progressbar_height"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_average_current"
                        app:layout_constraintTop_toTopOf="@id/tv_average_current"
                        app:layout_constraintBottom_toBottomOf="@id/tv_average_current"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_my_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/section_average_current">

                    <TextView
                        android:id="@+id/tv_my_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="4dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textSize="@dimen/text_sm"
                        android:textColor="@color/secondary"
                        android:background="@drawable/shape_rec_round_4"
                        android:backgroundTint="@color/gray_1"
                        android:layout_marginStart="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/challenge_detail_my_current"/>

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/progress_my_current"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/progressbar_height"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_my_current"
                        app:layout_constraintTop_toTopOf="@id/tv_my_current"
                        app:layout_constraintBottom_toBottomOf="@id/tv_my_current"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_detail_intro"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_challenge_intro_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하루 한번 아침에 일어나서 물이 담긴 컵사진 인증하루 만보 걷기 챌린지는 쉽고 재미있게 만보를 걸을 수있는 챌린지로, 제가 맨날 일하다가 한번 입원하고 나서 심각성을 느끼고 만들게 된 멋진 챌린지\n\n안녕하세요"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="@dimen/text_base"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_intro"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_detail_info"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_info">
                    
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">
                        
                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_recruit_period"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/line_calender_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="@dimen/text_lg"
                            android:text="@string/challenge_detail_recruit_period"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_recruit_period"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="@dimen/text_base"
                            android:text="06월 26일(월) - 06월 28일(수)"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_challenge_period"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/line_noti_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="@dimen/text_lg"
                            android:text="@string/challenge_detail_challenge_period"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_challenge_period"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="@dimen/text_base"
                            android:text="6월 30일(금) - 07월 7일(금)"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_recruit_count"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/filled_community_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="@dimen/text_lg"
                            android:text="@string/challenge_detail_recruit_count"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_recruit_count"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="@dimen/text_base"
                            android:text="30명"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_mission_count"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/filled_checkbox_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="@dimen/text_lg"
                            android:text="@string/challenge_detail_mission_count"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_mission_count"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="@dimen/text_base"
                            android:text="총 14회"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_mission_time"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/filled_clock_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="@dimen/text_lg"
                            android:text="@string/challenge_detail_mission_time"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_mission_time"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="@dimen/text_base"
                            android:text="매일 자정까지"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_reward"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/filled_gift_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="@dimen/text_lg"
                            android:text="@string/challenge_detail_reward"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_reward"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="@dimen/text_base"
                            android:text="있음"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/challenge_detail_rule"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_fail"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/section_success"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_rule">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_fail_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/iv_fail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_fail_icon"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/ic_delete_box"
                            android:tint="@color/error"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_fail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@string/challenge_detail_fail"
                            android:textColor="@color/error"
                            android:textSize="@dimen/text_sm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_fail_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/iv_fail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/shape_mission_fail"
                        android:padding="8dp"
                        android:src="@drawable/line_delete_24"
                        android:tint="@color/error"
                        app:layout_constraintBottom_toTopOf="@id/tv_fail_module"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/section_fail_tv" />

                    <TextView
                        android:id="@+id/tv_fail_module"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="11회 미만 인증"
                        android:textColor="#2A2B36"
                        android:textSize="@dimen/text_lg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_success"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/section_fail"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_rule">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_success_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/iv_success"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_success_icon"
                            android:layout_width="@dimen/icon_size_16"
                            android:layout_height="@dimen/icon_size_16"
                            android:src="@drawable/filled_cam_16"
                            android:tint="@color/main"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@string/challenge_detail_success"
                            android:textColor="@color/main"
                            android:textSize="@dimen/text_sm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_success_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/iv_success"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/shape_mission_success"
                        android:padding="8dp"
                        android:src="@drawable/filled_cam_24"
                        android:tint="@color/main"
                        app:layout_constraintBottom_toTopOf="@id/tv_success_module"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/section_success_tv" />

                    <TextView
                        android:id="@+id/tv_success_module"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="실시간 사진촬영"
                        android:textColor="#2A2B36"
                        android:textSize="@dimen/text_lg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_feed_under_bar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_challenge_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp">

                <TextView
                    android:id="@+id/tv_challenge_mission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/challenge_detail_mission"
                    android:textSize="@dimen/text_2xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_challenge_mission_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
