    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textColor">@color/selector_btn_text_color</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_textbtn</item>
        <item name="android:textColor">@color/selector_textbtn_text_color</item>
    </style>

    <style name="LineButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_line_btn</item>
