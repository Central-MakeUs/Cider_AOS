<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageButtonDefault" parent="Widget.AppCompat.ImageButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textColor">@color/selector_btn_text_color</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_textbtn</item>
        <item name="android:textColor">@color/selector_textbtn_text_color</item>
    </style>

    <style name="LineButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_line_btn</item>
        <item name="android:textColor">@color/selector_line_btn_text_color</item>
    </style>

    <style name="LineButtonStyleMint" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_line_btn_mint</item>
        <item name="android:textColor">@color/selector_line_btn_text_color</item>
    </style>

    <style name="LineButtonStylePink" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_line_btn_pink</item>
        <item name="android:textColor">@color/selector_line_btn_text_color</item>
    </style>

    <style name="LineButtonStyleYellow" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_line_btn_purple</item>
        <item name="android:textColor">@color/selector_line_btn_text_color</item>
    </style>

    <style name="LineButtonStyleBlue" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_line_btn_blue</item>
        <item name="android:textColor">@color/selector_line_btn_text_color</item>
    </style>


    <style name="DefaultCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/selector_check_box</item>
    </style>

    <style name="SpinnerDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/SpinnerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/SpinnerButtonStyle</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:padding">24dp</item>
    </style>


    <style name="SpinnerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    
    <style name="TextViewTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textSize">@dimen/text_5xl</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- 챌린지 버튼 텍스트 -->
    <style name="ChallengeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">@dimen/text_2xl</item>
        <item name="android:textColor">@color/selector_challenge_btn_text_color</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    
    <!-- 챌린지 개설 제목 스타일 -->
    <style name="ChallengeCreateTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">@dimen/text_2xl</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="ChallengeCreateImportantStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">@dimen/text_2xl</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:text">*</item>
    </style>

    <!-- EditText 스타일 -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/gray_4</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/shape_edittext_none</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="TextBoxButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/shape_line_btn</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <!-- 글자 수 세기 -->
    <style name="CountTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/gray_5</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>

    <style name="SubTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:textColor">@color/icon</item>
    </style>
    
    <style name="AlertTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/error</item>
    </style>

</resources>