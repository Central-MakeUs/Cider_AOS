<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cider" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text</item>
        <item name="imageButtonStyle">@style/ImageButtonDefault</item>
        <item name="buttonStyle">@style/DefaultButtonStyle</item>
        <item name="checkboxStyle">@style/DefaultCheckBoxStyle</item>
        <item name="android:textColorHint">@color/gray_4</item>
    </style>
</resources>